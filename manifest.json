{
    "manifest_version": 2,

    "name": "Twitter Pic",
    "description": "Показывает фотографии с сервиса Instagram в Twitter-ленте.",
    "version": "1.0.0",

    "permissions": [ "tabs" , "http://*/*", "https://*/*" ],

    "icons": {
        "128": "assets/icon-128.png",
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "libs/jquery.min.js",
                "js/content.js"
            ]
        }
    ]
}
